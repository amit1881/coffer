<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="top"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Your Wallet Balence"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_total_balence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/wallet_rs"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />
    </LinearLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:background="@color/background"
        android:gravity="center">


        <EditText
            android:id="@+id/et_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mobile_number"
            android:inputType="phone"
            android:padding="10dp"
            android:drawableLeft="@mipmap/icon9"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp"
            android:maxLength="10"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/et_enter_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_amount_rs"
            android:inputType="number"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/send_money"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />


        <EditText
            android:id="@+id/et_password_coffer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et_passeword"
            android:inputType="textPassword"
            android:padding="10dp"
            android:drawableLeft="@mipmap/lock"
            android:drawablePadding="10dp"
            android:layout_marginTop="20dp"
            android:imeOptions="actionDone"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send"
            android:id="@+id/btn_send_now"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/gredient_button"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>
</ScrollView>





</LinearLayout>
